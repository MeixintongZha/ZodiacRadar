<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thay.geopointsexample.MenuUsersActivity">

    <LinearLayout
        android:layout_width="377dp"
        android:layout_height="166dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="156dp">

        <Button
            android:id="@+id/button_my_location"
            android:layout_width="211dp"
            android:layout_height="104dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="24dp"
            android:background="#0000bf"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Find my location"
            android:textColor="@android:color/white"

            />

    </LinearLayout>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Back"
        android:textColor="@android:color/black"
        android:textSize="12sp"

        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="32dp" />

    <Button
        android:id="@+id/button_closest_user"
        android:layout_width="220dp"
        android:layout_height="108dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="#0000bf"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Find closest user"
        android:textColor="@android:color/white"

        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="395dp" />
</android.support.constraint.ConstraintLayout>